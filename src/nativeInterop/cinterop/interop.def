#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <sys/types.h>
#include <sys/stat.h>
---

/// See CInterop documentation
/// for more details of `.def` files
/// https://kotlinlang.org/docs/reference/native/c_interop.html
char* getCwd() {
    char cwd[10000];
    getcwd(cwd, sizeof(cwd));
    return cwd;
}

int removeDir(char* path) {
    return unlink(path);
}
